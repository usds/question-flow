      "@usds.gov/questionable-build": [
        "../questionable-build/src/index.ts"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "../../tsconfig.json",
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../questionable-build"
    },
    {
      "path": "../questionable-core"
    },
    {
      "path": "../questionable-mocks"
    }
  ]
