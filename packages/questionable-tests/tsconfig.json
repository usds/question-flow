      "ESNext",
      "dom"
    ],
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "esnext",
    "outDir": "dist",
    "paths": {
      "@usds.gov/questionable-core": [
        "../questionable-core/src/index.ts"
      ],
      "@usds.gov/questionable-mocks": [
