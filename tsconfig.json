{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "alwaysStrict": true,
    "baseUrl": "./packages",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ES2015",
      "es2019"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "paths": {
      "@usds.gov/questionable-react-component": [
        "questionable-react-component"
      ],
      "@usds.gov/questionable-core": [
        "questionable-core"
      ],
      "@usds.gov/ssa-eligibility": [
        "ssa-eligibility"
      ],
      "@usds.gov/questionable-tests": [
        "questionable-tests"
      ],
      "@usds.gov/questionable-storybook": [
        "questionable-storybook"
      ],
      "@usds.gov/questionable-mocks": [
        "questionable-mocks"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "types.d.ts",
    "src"
  ],
}
