{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "esnext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "paths": {
      "@usds.gov/*": [
        "packages/*/src/index.ts"
      ],
    }
  },
  "references": [
    {
      "path": "packages/questionable-core"
    },
    {
      "path": "packages/questionable-mocks"
    }
  ],
  "exclude": [
    "node_modules",
  ],
  "include": [
    "types.d.ts",
    "src"
  ],
  "ts-node": {
    "swc": true
  }
}
