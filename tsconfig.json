{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "paths": {
      "@usds.gov/*": [
        "packages/*/src/index.ts",
      ],
    },
  },
  "references": [
    {
      "path": "packages/questionable-core",
    },
    {
      "path": "packages/questionable-console",
    },
    {
      "path": "packages/questionable-mocks",
    },
    {
      "path": "packages/questionable-build",
    },
    {
      "path": "packages/questionable-storybook",
    },
    {
      "path": "packages/questionable-tests",
    },
    {
      "path": "packages/ssa-eligibility"
    },
    {
      "path": "packages/questionable-react-component"
    }
  ],
  "exclude": [
    "node_modules",
  ],
  "include": [
    "types.d.ts",
    "src"
  ],
  "ts-node": {
    "swc": true
  }
}
